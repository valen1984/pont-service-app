{
"compilerOptions": {
    "target": "ES2022",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "module": "ESNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "types": ["node"],
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "allowJs": true,
    "jsx": "react-jsx",
    "paths": {
      "@/*": ["./*"]
    },
    "baseUrl": "src",
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "include": ["src", "server", "env.d.ts", "server/constants.js", "tsconfig.server.json", "server/email.ts", "server/server.js", "server/mecadopago.js"]
  }

