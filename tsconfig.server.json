{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "dist/server",
    "rootDir": ".",                      // ðŸ‘ˆ ahora abarca todo el proyecto
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["server", "src/types.ts"],
  "exclude": ["node_modules", "dist"]
}
